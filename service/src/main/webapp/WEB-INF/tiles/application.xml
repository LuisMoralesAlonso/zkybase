<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
		"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	
	
	<!-- =========================================================================================================== -->
	<!-- Application list                                                                                            -->
	<!-- =========================================================================================================== -->
	
	<definition name="applicationList" extends="pageTemplate">
		<put-attribute name="content">
			<definition extends="listPageTitledTemplate">
				<put-attribute name="content" value="/WEB-INF/jsp/application/applicationList.jsp" />
			</definition>
		</put-attribute>
	</definition>
	
	
	<!-- =========================================================================================================== -->
	<!-- Application details                                                                                         -->
	<!-- =========================================================================================================== -->
	
	<!-- App details page template -->
	<definition name="applicationDetailsPageTemplate" extends="pageTemplate">
		<put-attribute name="content">
			<definition extends="rightSidebarBodyTemplate">
				<put-attribute name="sidebar" value="/WEB-INF/jsp/application/details/applicationMenu.jsp" />
				<put-attribute name="content">
					<definition extends="detailsPageTitledTemplate" />
				</put-attribute>
			</definition>
		</put-attribute>
	</definition>
	
	<!-- Overview -->
	<definition name="applicationDetails" extends="applicationDetailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/details/applicationDetails.jsp" cascade="true" />
	</definition>
	
	<!-- Modules -->
	<definition name="applicationModules" extends="applicationDetailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/details/module/applicationModules.jsp" cascade="true" />
	</definition>
	
	<!-- SCM -->
	<definition name="applicationScm" extends="applicationDetailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/details/scm/applicationScm.jsp" cascade="true" />
	</definition>
	
	<!-- SCM collaborators -->
	<definition name="applicationScmCollaborators" extends="applicationDetailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/details/scm/applicationScmCollaborators.jsp" cascade="true" />
	</definition>
	
	<!-- SCM commits -->
	<definition name="applicationScmCommits" extends="applicationDetailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/details/scm/applicationScmCommits.jsp" cascade="true" />
	</definition>
	
	<!-- SCM watchers -->
	<definition name="applicationScmWatchers" extends="applicationDetailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/details/scm/applicationScmWatchers.jsp" cascade="true" />
	</definition>
	
	<!-- SCM hooks -->
	<definition name="applicationScmHooks" extends="applicationDetailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/details/scm/applicationScmHooks.jsp" cascade="true" />
	</definition>
	
	
	<!-- =========================================================================================================== -->
	<!-- Create application form                                                                                     -->
	<!-- =========================================================================================================== -->
	
	<definition name="createApplicationForm" extends="pageTemplate">
		<put-attribute name="content">
			<definition extends="titledTemplate">
				<put-attribute name="content">
					<definition template="/WEB-INF/jsp/application/applicationForm.jsp">
						<put-attribute name="formMethod" value="POST" />
					</definition>
				</put-attribute>
			</definition>
		</put-attribute>
	</definition>
	
	
	<!-- =========================================================================================================== -->
	<!-- Edit application form                                                                                       -->
	<!-- =========================================================================================================== -->
	
	<definition name="editApplicationForm" extends="pageTemplate">
		<put-attribute name="content">
			<definition extends="titledTemplate">
				<put-attribute name="content">
					<definition template="/WEB-INF/jsp/application/applicationForm.jsp">
						<put-attribute name="formMethod" value="PUT" />
					</definition>
				</put-attribute>
			</definition>
		</put-attribute>
	</definition>
	
	
	<!-- =========================================================================================================== -->
	<!-- Create application module form                                                                              -->
	<!-- =========================================================================================================== -->
	
	<definition name="createApplicationModuleForm" template="/WEB-INF/jsp/application/details/module/applicationModuleForm.jsp" />
	
</tiles-definitions>
