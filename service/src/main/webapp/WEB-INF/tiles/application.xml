<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
		"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<definition name="applicationList" extends="listPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/applicationList.jsp" cascade="true" />
	</definition>
	<definition name="applicationDetails" extends="detailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/details/applicationDetails.jsp" cascade="true" />
	</definition>
	<definition name="createApplicationForm" extends="pageTemplate">
		<put-attribute name="content">
			<definition extends="titledTemplate">
				<put-attribute name="content">
					<definition template="/WEB-INF/jsp/application/applicationForm.jsp">
						<put-attribute name="formMethod" value="POST" />
					</definition>
				</put-attribute>
			</definition>
		</put-attribute>
	</definition>
	<definition name="editApplicationForm" extends="pageTemplate">
		<put-attribute name="content">
			<definition extends="titledTemplate">
				<put-attribute name="content">
					<definition template="/WEB-INF/jsp/application/applicationForm.jsp">
						<put-attribute name="formMethod" value="PUT" />
					</definition>
				</put-attribute>
			</definition>
		</put-attribute>
	</definition>
</tiles-definitions>
